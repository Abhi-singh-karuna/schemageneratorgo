{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://example.com/employee.schema.json",
  "title": "Record of employee",
  "description": "This document records the details of an employee",
  "type": "object",
  "properties": {
      "id": {
          "type": "number"
      },
      "name": {
          "type": "string"
      },
      "age": {
          "type": "number"
      },
      "hobbies": {
          "type": "object",
          "properties": {
              "indoor": {
                  "type": "array",
                  "items": {
                      "type": "string"
                  }
              },
              "outdoor": {
                  "type": "array",
                  "items": {
                      "type": "string"
                  }
              }
          }
      }
  }
}